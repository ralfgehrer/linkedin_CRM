{
  "manifest_version": 3,
  "name": "LinkedIn CRM",
  "version": "1.0",
  "description": "CRM overlay for LinkedIn profiles",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://*.linkedin.com/*",
    "http://localhost:5000/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.linkedin.com/*"],
      "js": ["content/content.js"],
      "css": ["content/content.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
} 